<% end %>
<% end %>
<%= form_with model: @book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %></br>
  <%= f.submit 'Create Book' %>
<% end %>

 </body>
</html>